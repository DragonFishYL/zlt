page {
    background: #f2f2f2;
}
.su-body{padding:0 20rpx 0 20rpx;position:relative;margin-top:-120rpx;}
.su-back{background:#3399ff;height:200rpx;padding:50rpx;}
.su-back>view{line-height:60rpx;display:-webkit-box;-webkit-box-orient:vertical;-webkit-line-clamp:2;overflow:hidden;font-size:36rpx;color:#fff;}
.su-h{height:160rpx;background:#fff;padding:20rpx;border-radius:20rpx;margin-top:20rpx;}
.su-hl{float:left;width:46%;height:160rpx;font-size:32rpx;color:#999;position:relative;text-align:center;}
.su-hz{float:left;width:8%;height:100rpx;line-height:100rpx;}
.su-hz>image{height:60rpx;width:60rpx;margin-top:20rpx;}
.su-hl>view>image{width:100rpx;height:100rpx;border-radius:50%;}
.su-h:nth-child(2){height:100rpx;background:#fff;padding:20rpx;border-radius:20rpx;margin-top:20rpx;}
.su-hl2{float:left;width:49.5%;height:100rpx;font-size:32rpx;color:#999;position:relative;text-align:center;}
.su-hl2:nth-child(2){border-left:1rpx solid #aaa;}
.su-hl2>view>image{width:40rpx;height:40rpx;border-radius:50%;position:relative;left:-7%;}
.su-hl2>view>text{position:absolute;top:-1rpx;left:50%;}
.su-a{width:100%;height:auto;background:#fff;border-radius:20rpx;margin-top:20rpx;}
.su-a-a{height:auto;padding:20rpx;}
.su-a-al{width:50%;height:50rpx;text-align:left;float:left;font-size:32rpx;color:#333;border-bottom:1rpx solid #eee;}
.su-a-ar{width:50%;height:50rpx;text-align:right;float:right;font-size:26rpx;color:#aaa;border-bottom:1rpx solid #eee;}
.su-a-b{height:110rpx;}
.su-a-b>view{width:25%;height:80rpx;float:left;}
.su-a-b>view>view:nth-child(1){height:40rpx;line-height:40rpx;font-size:36rpx;text-align:center;}
.su-a-b>view>view:nth-child(2){height:40rpx;line-height:40rpx;font-size:28rpx;color:#aaa;text-align:center;}
.su-a-c{height:auto;}
.su-a-c>view:nth-child(1),.su-a-c>view:nth-child(2){height:120rpx;padding:0 20rpx;} 
.su-a-c>view>view:nth-child(1){height:60rpx;}
.su-a-c>view>view:nth-child(1)>view{width:50%;height:50rpx;line-height:50rpx;float:left;}
.su-a-c>view>view:nth-child(1)>view:nth-child(1){font-size:28rpx;color:#666;}
.su-a-c>view>view:nth-child(1)>view:nth-child(2){font-size:32rpx;color:red;text-align:right;}
.su-a-c>view>view:nth-child(2){max-height:60rpx;padding:0 0 20rpx 0;line-height:30rpx;font-size:28rpx;color:#aaa;}
.su-a-c>view:nth-child(1)>view:nth-child(2){border-bottom:1rpx dashed #aaa;}
.su-a-d{height:auto;}
.su-a-dl{width:20%;height:120rpx;float:left;text-align:center;}
.su-a-d>view>image{width:90rpx;height:90rpx;border-radius:50%;margin-top:10rpx;}
.floatclear{clear:both;}
























