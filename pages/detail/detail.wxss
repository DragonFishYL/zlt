/*详情页样式*/
.detFocus image {
  display: block;
  width: 100%;
}
.detCon {
  padding: 10px 15px;
}
.detTit {
  display: block;
  font-size: 32rpx;
  text-align: left;
  line-height: 44rpx;
}
.actTime {
  display: block;
  font-size: 24rpx;
  color: #666a75;
  text-align: left
}
.groInfo {
  overflow: hidden;
  padding: 10px 0;
  line-height: 42px;
}
.groPrice {
  float: left;
  text-align: left;
  font-size: 36rpx;
  color: #f00;
  width: 40%;
}
.groPerNum {
   float: left;
   width: 30%;
   text-align: center;
   font-size: 28rpx;
}
.groType {
  float: right;
  width: 30%;
  text-align: right;
  font-size: 28rpx;
}
.actiTit {
  display: block;
  font-size: 28rpx;
  color: #666a75;
  padding: 8rpx 0 12rpx 0;
  text-align: left;
}
.actiDis {
  display: block;
  padding-bottom: 20rpx;
  font-size: 24rpx;
  color: #666a75;
  line-height: 40rpx;
  text-align: left;
}
.shaBtn {
  display: block;
  background: orange;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.expoTit {
  background: #c7c7c7;
  padding: 20rpx;
  text-align: center;
  font-size: 28rpx;
  color: #252b3a;
}
.expoCon {
  padding: 20rpx 30rpx;
  font-size: 24rpx;
  line-height: 48rpx; 
}
.expoName {
  font-size: 28rpx;
  line-height: 50rpx;
}
.expoOpe {
  overflow: hidden;
}
.expoTime {
  float: left;
}
.linef7 {
  background: #f7f7f7;
  height: 14rpx;
}
.detBot {
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 9;
  width: 100%;
  height: 80rpx;
}
.detShaBtn {
  float: left;
  width: 50%;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  background: orange;
  border-radius: 0;
}
.buyBtn {
  float: right;
  width: 50%;
  height: 80rpx;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 80rpx;
  background: #f00;
  border-radius: 0;
}
.detShaBtn::after,.buyBtn::after {
  border: none;
}

