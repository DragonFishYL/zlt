.su-banner {
    width: 100%;
    position: relative;
}

page {
    background: #f2f2f2;
}

.su-banner>image {
    width: 100%;
    height: auto;
}

.mask-logo {
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 10%;
    width: 261rpx;
    height: 261rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.name {
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    top: 20%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.mask-logo>image {
    height: 80rpx;
}

.mask-logo>image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 50%;
    display: block;
    position: relative;
    z-index: 3;
    box-shadow: 0px 2rpx 4rpx #B7B3B3;
    margin-right: -1rpx;
}

.show_share {
    position: absolute;
    transform: translate(-50%,-50%);
    left: 50%;
    bottom: -53rpx;
    height: 121rpx;
    display: flex;
    width: 100%;
    background: #000;
    opacity: 0.5;
}

.show_share .tab-share {
    width: 50%;
    text-align: center;
    line-height: 121rpx;
}

.show_share .tab-share>text {
    color: #fff;
}

.ticket {
    background: #fff;
    margin-top: 15rpx;
    padding: 30rpx;
	height:25px;
}

.ticket .ticket_l {
    float: left;
}

.ticket .ticket_r {
    float: right;
}


.shaBtn {
  display: block;
  background: orange;
  color: #fff;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}
.linef7 {
  background: #f7f7f7;
  height: 14rpx;
}
