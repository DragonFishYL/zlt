.wrapper-tool {
    padding-bottom: 128rpx;
    background: #f2f2f2;
}

.su-banner {
    width: 100%;
    border-top: 2rpx solid #e9e9e9;
    box-shadow: 0rpx 6rpx 4rpx #e9e9e9;
}

.su-banner>image {
    display: block;
    width: 100%;
    height: auto;
}

.su-input {
    position: absolute;
    top: 120rpx;
    opacity: 1;
    width: 100%;
}

.su-input>button {
    width: 87%;
    background: #fff;
    border: none;
    border-radius: 8rpx;
    color: #616161;
    height: 80rpx;
    line-height: 80rpx;
    margin: 0 auto;
    padding-left: 25rpx;
    text-align: left;
}

.su-input>image {
    width: 40rpx;
    position: absolute;
    top: 22rpx;
    right: 60rpx;
    height: 40rpx;
    z-index: 999;
}

.su-search {
    width: 100%;
    text-align: center;
    font-size: 30rpx;
    color: #999;
    border-bottom: 2rpx solid #e8e8e8;
    padding: 25rpx 0;
    background: #fff;
}

.su-search .search-count {
    display: inline-block;
    flex-direction: column;
    font-size: 30rpx;
    width: 250rpx;
    align-items: center;
    justify-content: center;
    position: relative;
    top: 12rpx;
}

.su-search .search-count>text {
    width: 30rpx;
    color: #3399ff;
    display: inline-block;
    font-size: 34rpx;
    border: 1rpx solid #3399ff;
    margin-left: 10rpx;
}

.demo-text-1 {
    position: relative;
    align-items: center;
    justify-content: center;
    background-color: #1AAD19;
    color: #FFFFFF;
    font-size: 36rpx;
}

.demo-text-2 {
    position: relative;
    align-items: center;
    justify-content: center;
    background-color: #2782D7;
    color: #FFFFFF;
    font-size: 36rpx;
}

.demo-text-3 {
    position: relative;
    align-items: center;
    justify-content: center;
    background-color: #F1F1F1;
    color: #353535;
    font-size: 36rpx;
}

.page-section {
    width: 100%;
}

.page-section>swiper {
    width: 100%;
    height: 368rpx;
}

.swiper-item {
    width: 100%;
}

.swiper-item>image {
    width: 100%;
    vertical-align: middle;
    height: 368rpx;
}

.su-host {
    text-align: center;
    padding-top: 30rpx;
    padding-bottom: 30rpx;
    background: white;
    font-size: 40rpx;
    border-bottom: 2rpx solid #e8e8e8;
}

.su-mmdiv {
    width: 100%;
    height: 100%;
    margin: 0;
    color: #333;
    font-family: Arial,'Microsoft YaHei';
    background: #f2f2f2;
}

.main_details {
    width: 90%;
    height: auto;
    margin: 0 auto;
    margin-top: 25rpx;
    background: white;
    padding-bottom: 30rpx;
}

.main_details>image {
    width: 100%;
    border-radius: 10rpx;
}

.main_details_div {
    padding: 0 20rpx;
}

.li_one {
    line-height: 40rpx;
    margin-top: 20rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    display: block;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    font-size: 34rpx;
    color: #333;
    white-space: nowrap;
}

.li_two {
    margin-top: 30rpx;
    color: #616161;
    font-size: 30rpx;
}

.li_three {
    color: #616161;
    font-size: 25rpx;
    margin-top: 20rpx;
}

.orange {
    font-size: 36rpx;
    color: #fc6709;
}

.tab-main image{
  width: 20px;
  height: 20px;
}

.flex-tab{
  width: 25%;
  text-align: center;
  float: left;
}

.tabbar{
  height: 40px;
  line-height: 40px;
  width: 100%;
  background: #fff;
  position: fixed;
  bottom: 0px;
  border-top:1rpx solid #e2e2e2;
}
